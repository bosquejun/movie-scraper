{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"baseUrl": ".",
		"paths": {
			"@comeback/types": ["packages/types/src/index.ts"],
			"@comeback/schema": ["packages/schema/src/index.ts"],
			"@comeback/express-lib": ["packages/express-lib/src/index.ts"],
			"@comeback/express-lib/*": ["packages/express-lib/src/*"],
			"@comeback/logger": ["packages/logger/src/index.ts"],
			"@comeback/utils": ["packages/utils/src/index.ts"],
			"@comeback/errors": ["packages/errors/src/index.ts"],
			"@comeback/redis": ["packages/redis/src/index.ts"],
			"@comeback/redis/*": ["packages/redis/src/*"]
		}
	},
	"exclude": ["./dist", "./build", "./node_modules"]
}
